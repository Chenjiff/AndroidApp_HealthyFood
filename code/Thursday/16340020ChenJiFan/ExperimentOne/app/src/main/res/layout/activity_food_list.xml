<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FoodListActivity">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/food_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/collect_button"
        android:src="@mipmap/collect"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="25dp"
        android:backgroundTint="#FFFFFF"
        android:backgroundTintMode="src_atop"/>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:visibility="invisible"
        android:id="@+id/collect_bar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">
        <Button
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/shape_for_icon"
            android:textColor="#FFFFFF"
            android:textSize="20dp"

            android:layout_centerVertical="true"
            android:text="*"
            android:id="@+id/collect_bar_icon"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/collect_bar_icon"
            android:text="收藏夹"
            android:textSize="24dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/collect_bar_name"/>
    </RelativeLayout>
    <android.widget.ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/food_collect"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@id/collect_bar"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="65dp"/>
</android.support.constraint.ConstraintLayout>