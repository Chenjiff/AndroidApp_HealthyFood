<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:id="@+id/detail_top_bar"
        android:paddingHorizontal="20dp"
        android:paddingVertical="30dp"
        android:background="#622033">
        <Button android:layout_width="30dp"
            android:id="@+id/back_button"
            android:layout_height="30dp"
            android:background="@mipmap/back"/>
        <TextView android:layout_width="wrap_content"
            android:id="@+id/food_detail_name1"
            android:layout_height="wrap_content"
            android:text="牛奶11"
            android:textSize="25dp"
            android:textColor="#FFFFFF"
            android:layout_gravity="bottom|left"/>
        <Button android:layout_height="35dp"
            android:layout_width="35dp"
            android:id="@+id/collect_icon"
            android:background="@mipmap/empty_star"
            android:layout_gravity="bottom|right"/>
    </FrameLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:paddingHorizontal="20dp">
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#D5000000"
                android:textSize="22dp"
                android:id="@+id/food_detail_name2"
                android:text="牛奶"
                android:layout_marginBottom="10dp"/>
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/food_detail_nutrient"
                android:text="富含蛋白质"
                android:textColor="#8A000000"
                android:layout_below="@id/food_detail_name2"/>
            <Button android:layout_width="35dp"
                android:id="@+id/food_detail_buy"
                android:layout_height="35dp"
                android:background="@mipmap/collect"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
            <View android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:layout_width="2dp"
                android:layout_marginRight="20dp"
                android:background="#1E000000"
                android:layout_toLeftOf="@id/food_detail_buy"/>
        </RelativeLayout>
        <View android:layout_height="2dp"
            android:layout_width="match_parent"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="#1E000000" />
        <TextView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="23dp"
            android:padding="20dp"
            android:text="更多信息"/>
        <View android:layout_height="15dp"
            android:layout_width="match_parent"
            android:background="#1E000000" />
        <ListView
            android:layout_width="match_parent"
            android:id="@+id/detail_list"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>